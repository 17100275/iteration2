<h1>All records:</h1>

<b> <%= link_to 'New Record', new_record_path %> </b>

<table>
  <tr>
    <th>Prescriptions</th>
    <th>Symptoms</th>
    <th>Date</th>
    <th>User</th>

    <th>         </th><th>         </th><th>         </th><th>         </th><th>         </th><th>         </th>
    <th></th>
    <th></th>
    <th></th>
    
  </tr>
 
  <% @records.each do |record| %>
    <tr>
      <% if record.user == current_user %>
        <td><%= record.Prescriptions %></td>
        <td><%= record.Symptoms %></td>
        <td><%= record.Day %>:<%= record.Month %>:<%= record.Year %></td>
        <td><%= record.user.email %></td>
      
        <th>         </th><th>         </th><th>         </th><th>         </th><th>         </th><th>         </th>
        <td> <b> <%= link_to 'Show', record_path(record) %> </b> </td>
        <td> <b> <%= link_to 'Edit', edit_record_path(record) %> </b> </td>
        <td> <b> <%= link_to 'Delete', record_path(record), method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } %> </b> </td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><b> <%= link_to 'Back to Welcome Page', :controller => :welcome, :action => :index %> </b></p>